@model IEnumerable<Team11_2106Project.ViewModel.Navbar>

<!--5-->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            @if (TempData.ContainsKey("StudentRole"))
            {
                var studentRole = TempData["StudentRole"].ToString();

                if (studentRole.Equals("Candidate"))
                {
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">Candidate</a>
                }
                else if (studentRole.Equals("Admin"))
                {
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">Admin</a>
                }
                else if (studentRole.Equals("Voter"))
                {
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">Voter</a>
                }
                TempData["StudentRole"] = studentRole;
            }
            
        </div>
        <div class="collapse navbar-collapse">
            @if (TempData.ContainsKey("StudentRole"))
            {
                var studentRole = TempData["StudentRole"].ToString();

                if (studentRole.Equals("Candidate"))
                {
                    if (TempData.ContainsKey("CandidateID"))
                    {
                        var candidateID = TempData["CandidateID"].ToString();

                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Your Profile", "Details", "CandidateProfiles", new { id = candidateID }, new { })</li>
                            <li>@Html.ActionLink("Rally", "Index", "Rallies")</li>
                        </ul>

                        TempData["CandidateID"] = candidateID;
                    } 
                }
                else if (studentRole.Equals("Voter"))
                {
                    <ul class="nav navbar-nav">
                        <li>SUCK THAT BITCHES! VOTER!!!</li>
                    </ul>
                }
                else if (studentRole.Equals("Admin"))
                {
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Stats", "Stats", "Home")</li>
                        <li>@Html.ActionLink("Rally", "Index", "Rallies")</li>
                        @*TODO FIND A WAY TO LINK CANDIDATE PROFILE PAGE*@
                        <li>@Html.ActionLink("Candidate Profile", "Index", "CandidateProfiles")</li>
                    </ul>
                }
                TempData["StudentRole"] = studentRole;
            }


            @Html.Partial("_LoginPartial")
        </div><!--/.nav-collapse -->
    </div>
</div>



